<div id="tab-content" class="bg-custom">
	<div class="row-fluid">
		<div class="span3">Name:</div>
		<div class="span3"><%= @test_step.name %></div>
	</div>
	<div class="row-fluid">
		<div class="span3">Description:</div>
		<div class="span3"><%= @test_step.description %></div>
	</div>
	<div class="row-fluid">
		<div class="span3">Object Repository:</div>
		<div class="span3"><%= @test_step.object_repository_id %></div>
	</div>
	<div class="row-fluid">
		<div class="span3">Function:</div>
		<div class="span3"><%= @test_step.function %></div>
	</div>
	<div class="row-fluid">
		<div class="span3">Value:</div>
		<div class="span3"><%= @test_step.value %></div>
	</div>
	<div class="row-fluid">
		<div class="span3"><%= link_to "Update Test Step", edit_test_test_step_path(id: @test_step.id), :remote => true, class:'btn btn-primary' %></div>
		<div class="span3"><%= link_to "Delete Test Step", test_test_step_path(id: @test_step.id), method: :delete, :remote => true, data: { confirm: "Are you sure you want to delete #{@test_step.name}?" }, class:'btn btn-primary' %></div>
	</div>
	<br>
</div>
